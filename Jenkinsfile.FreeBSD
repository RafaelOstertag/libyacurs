@Library('yapetJenkins') _

properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '',
				      artifactNumToKeepStr: '',
				      daysToKeepStr: '', numToKeepStr:
				      '5')),
            pipelineTriggers([[$class: 'PeriodicFolderTrigger', interval: '1h']])])
node("freebsd") {
    yapet.notify {
	os = "FreeBSD"
	yapet.checkout()
        yapet.makeChangeLog()
	yapet.autoconf()
	yapet.configure os
	yapet.build os
    }
}
